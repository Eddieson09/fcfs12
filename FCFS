#include<iostream>
using namespace std;

int main()
{
    int bt[10], wt[10], at[10], tat[10], n, i;
    float avewt=0, avetat=0;
    cout << "\nEnter number of processes ";
    cin>>n;

    for(i=0; i<n; i++)
    {
        cout << "\nEnter burst time for process " << i+1 << " -- ";
        cin>>bt[i];
    }
    wt[0]=0;
    wtavg=0;

    tat[0]=bt[0];
    tatavg=bt[0];

    for(i=1; i<n; i++)
    {
        wt[i]=wt[i-1]+bt[i-1];
        tat[i]=tat[i-1]+bt[i];
        wtavg = wtavg + wt[i];
        tatavg = tatavg + tat[i];
    }
    cout << "\nProcess\tBurst Time\tWaiting Time\tTurnaround Time";
    for(i=0; i<n; i++)
        cout << "\n\tP" <<i << "\t\t" << bt[i] << "\t\t" << wt[i] << "\t\t" << tat[i];
    cout << "\nAverage Waiting Time -- " << wtavg/n;
    cout << "\nAverage Turnaround Time -- " << tatavg/n;

    return 0;

}